# AI-Based Incident Root Cause Analyzer Configuration

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="AI Incident Root Cause Analyzer"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# API Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# =============================================================================
# CORS Settings
# =============================================================================
# CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# Telemetry Store
# =============================================================================
TELEMETRY_RETENTION_HOURS=24
MAX_LOGS_PER_SERVICE=100000
MAX_METRICS_PER_SERVICE=100000
MAX_TRACES=50000

# =============================================================================
# Log Intelligence
# =============================================================================
LOG_EMBEDDING_MODEL=all-MiniLM-L6-v2
LOG_EMBEDDING_BATCH_SIZE=32
LOG_CLUSTER_SIMILARITY_THRESHOLD=0.85
LOG_CLUSTER_MIN_SIZE=3

# =============================================================================
# Metric Intelligence
# =============================================================================
METRIC_ZSCORE_THRESHOLD=3.0
METRIC_BASELINE_WINDOW_MINUTES=60
METRIC_MIN_DATA_POINTS=10

# =============================================================================
# Root Cause Analysis
# =============================================================================
RCA_TEMPORAL_WEIGHT=0.25
RCA_PROPAGATION_WEIGHT=0.25
RCA_EVIDENCE_WEIGHT=0.20
RCA_CENTRALITY_WEIGHT=0.15
RCA_SPECIFICITY_WEIGHT=0.15

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text
